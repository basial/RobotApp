<div class='tr_show'>
	<table>
		<thead>
			<tr> 
				<td><strong> ID </strong></td>
				<td><strong> Cash </strong></td>
				<td><strong> Date </strong></td>
				<td><strong> Credits </strong></td>
			</tr>
		</thead>
		<tbody>
			<% @transactions.each do |t| %>
				<tr> 
					<td><%= t.id %></td>
					<td><%= t.amount %> $</td>
					<td><%= t.created_at.strftime('%F %T') %></td>
					<td><%= t.credit.amount.to_i %></td>
				</tr>
			<% end %>
				
				<tr>
					<td class='suma'> SUM </td>
					<td class='suma' colspan="3"><%= @credits.to_i %></td>
				</tr>
			</tbody>
	</table>
</div>

<div class='link_back'>
	<%= link_to 'Play with the robot', root_path %>
</div>
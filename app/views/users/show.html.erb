<div class='tr_show'>
	<table>
		<thead>
			<tr> 
				<td><strong> ID </strong></td>
				<td><strong> Cash </strong></td>
				<td><strong> Date </strong></td>
			</tr>
		</thead>
		<tbody>
			<% @transactions.each do |t| %>
				<tr> 
					<td><%= t.id %></td>
					<td><%= t.amount %> $</td>
					<td><%= t.created_at.inspect[5..-12] %></td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>

<div class='link_back'>
	<%= link_to 'Play with the robot', root_path %>
</div>